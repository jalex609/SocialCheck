{
  "manifest_version": 2,

  "name": "SocialCheck",
  "description": "Allows you to quickly check news from local sites",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://hacker-news.firebaseio.com/*" ,
    "tabs" ,
    "activeTab"
  ]
}